<p id="notice"><%= notice %></p>

<article>
<h1><%= @post.title %> <small><em><%= link_to "Edit", edit_post_path %></em></small></h1>

<p>
  <strong>Written by:</strong> <%= @post.author %>
</p>

<p>
  <%= @post.content %>
</p>

<aside>
<p>
  <strong>Comments</strong>
<ul>
  <% @comments.each do |comment| %>
    <li class="comment">
      <p>
        <strong><%= comment.author %></strong><em><%= comment.created_at %></em><br />
        <%= comment.content %>
      </p>
    </li>
  <% end %>
</ul>

<h2>New Comment:</h2>

<%= form_for @comment do |c| %>
<input type="hidden" name="comment[post_id]" value="<%= @post.id %>" >
<p>
  <%= c.label :author %>
  <%= c.text_field :author %>
</p>
<p>
  <%= c.text_area :content %>
</p>
  <%= c.submit %>
<% end %>

</aside>

</article>


<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
